        <ImageView
            android:id="@+id/image_attraction"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/main_foot" />

        <!--景點名-->
        <TextView
            android:id="@+id/attraction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image_attraction"
            android:layout_toRightOf="@+id/image_attraction"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!--地址-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/attraction_title"
