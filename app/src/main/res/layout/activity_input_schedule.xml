<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingTop="40dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".input_schedule">

    <!--建立行程-->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:orientation="vertical"
        android:background="@drawable/angle">

        <!--地點-->

        <!--人數-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="目的地"
                android:textSize="10dp" />

            <Spinner
                android:id="@+id/aSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/spinner_background"
                android:dropDownVerticalOffset="40dp"
                android:entries="@array/Spinner_item"
                android:textSize="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="人數"
                android:textSize="10dp"
                android:paddingLeft="10dp"/>
            <Spinner
                android:id="@+id/bSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/spinner_background"
                android:entries="@array/Spinner_item02" />


        </LinearLayout>

        <!--日期-->

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/dd1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="出發日期"
                android:textSize="10dp"/>
            <Button
                android:id="@+id/pickBeginDateBtn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/blue"
                android:text="選擇出發日期"/>

            <!--出發日期-
            <TextView
                android:id="@+id/showBeginDate"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/textview_line"
                android:gravity="center"
                android:text="旅遊出發日期"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.738"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.614" /> -->

            <TextView
                android:id="@+id/dd2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="結束日期"
                android:textSize="10dp"
                android:paddingTop="10dp"/>
            <Button
                android:id="@+id/pickEndDateBtn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/blue"
                android:text="選擇結束日期" />

            <!--結束日期
            <TextView
                android:id="@+id/showEndDate"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/textview_line"
                android:gravity="center"
                android:text="旅遊結束日期"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.738"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.733" /> -->

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/checkmytrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="查看我的行程"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登出"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <Button
        android:id="@+id/submitmytrip"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/teal_200"
        android:text="建立行程"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.821"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.835" />

</androidx.constraintlayout.widget.ConstraintLayout>