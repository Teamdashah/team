<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".click_attractions"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/attrctions_imageView"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/main_foot" />
            <!--    android:layout_centerHorizontal="true"-->

            <TextView
                android:id="@+id/attrction_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attrctions_imageView"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="景點"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/attrction_detail_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attrction_detail_name"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="地址"
                android:textColor="@color/lightGrayColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/attrction_detail_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attrction_detail_address"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="電話"
                android:textColor="@color/lightGrayColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/attrction_detail_introducton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attrction_detail_phone"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="start|center|end"
                android:text="介紹"
                android:textColor="@color/lightGrayColor"
                android:textSize="18sp" />

            <!--            <Button-->
            <!--                android:id="@+id/att_location_btn"-->
            <!--                android:layout_width="69dp"-->
            <!--                android:layout_height="70dp"-->
            <!--                android:layout_marginStart="@id/attrction_detail_phone"-->
            <!--                android:background="@drawable/ic_location" />-->


        </LinearLayout>
    </ScrollView>


</RelativeLayout>